@page
@model WebScraper.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" class="form-control">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="LoginDto.Email"></label>
        <input asp-for="LoginDto.Email" class="form-control" />
        <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoginDto.Password"></label>
        <input asp-for="LoginDto.Password" class="form-control" type="password"/>
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>